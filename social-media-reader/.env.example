# Social Media Reader Configuration

# OpenAI API Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# LinkedIn Configuration (Optional - use mock data if not provided)
LINKEDIN_EMAIL=your-linkedin-email@example.com
LINKEDIN_PASSWORD=your-linkedin-password
LINKEDIN_PROFILE_URL=https://www.linkedin.com/in/your-profile/

# Reddit API Configuration (Optional - use mock data if not provided)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=SocialMediaReader/1.0 by YourUsername

# Application Configuration
USE_MOCK_DATA=false
MAX_LINKEDIN_POSTS=50
MAX_REDDIT_POSTS=100
OUTPUT_DIR=./results
DATA_DIR=./data

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./data/application.log

# Chrome/Selenium Configuration
CHROME_HEADLESS=true
CHROME_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10

# Content Generation Settings
DEFAULT_POST_TYPE=standard
GENERATE_VARIATIONS=true
CONTENT_CALENDAR_DAYS=7

# LinkedIn Post Configuration
POST_MIN_WORDS=100
POST_MAX_WORDS=300
INCLUDE_HASHTAGS=true
INCLUDE_EMOJIS=true
MAX_HASHTAGS=5

# Reddit Scraping Configuration
REDDIT_TIME_FILTER=week
REDDIT_SORT_METHOD=hot
MIN_POST_SCORE=50
MIN_POST_COMMENTS=10

# Development Settings
DEBUG=false
ENABLE_CACHE=true
CACHE_DURATION_HOURS=24

# Optional: Webhook/Notification Settings
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false

# Optional: Database Configuration (for future enhancements)
DATABASE_URL=sqlite:///./data/social_reader.db
REDIS_URL=redis://redis:6379/0

# Security Settings
RATE_LIMIT_REQUESTS_PER_MINUTE=60
MAX_FILE_SIZE_MB=100

# Feature Flags
ENABLE_VIDEO_SCRIPTS=true
ENABLE_CAROUSEL_POSTS=true
ENABLE_POLLS=true
ENABLE_ANALYTICS=true